{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
  <div class="card-body">
    <h4>Editar postagem:</h4>
    <form action="/admin/postagem/edit" method="POST">
      <input type="hidden" name="id" value="{{postagem._id}}">
      <label for="titulo">Titulo:</label>
      <input type="text" name="titulo" class="form-control" id="titulo" value="{{postagem.titulo}}">
      <label for="slug">Slug:</label>
      <input type="text" name="slug" class="form-control"  id="slug" value="{{postagem.slug}}">
      <label for="descricao">Descricao:</label>
      <input type="text" name="descricao" class="form-control" id="descricao" value="{{postagem.descricao}}">
      <label for="conteudo">Conteudo:</label>
      <textarea name="conteudo" class="form-control"  id="conteudo" >{{postagem.conteudo}}</textarea>
      <label for="categoria">Categorias:</label>
      <select name="categoria" id="categoria" >
        {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
      </select>
      <button class="btn btn-success mt-4" type="submit">Editar postagem</button>
    </form>
  </div>
</div>