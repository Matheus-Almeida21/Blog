{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h1>Nova categoria :</h1>

<div class="card">
  <div class="card-body">
    <form method="POST" action="/admin/categorias/nova" class="mt-4">
      <label for="nome">Nome :</label>
      <input class="form-control" type="text" id="nome" name="nome" placeholder="Nome da categoria">

      <label for="slug">Slug :</label>
      <input class="form-control" type="text" id="slug" name="slug" placeholder="Slug da categoria">

      <button type="submit" class="btn btn-success">Criar categoria</button>
    </form>
  </div>
</div>